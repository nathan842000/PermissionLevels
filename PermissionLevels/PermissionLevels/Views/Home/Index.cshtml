@model List<PermissionLevels.DTOs.ApplicationPermissionType>
@{
    ViewData["Title"] = "Application Permission Type";
}
<h1>@ViewData["Title"]</h1>

<table id="example" class="table table-striped table-bordered nowrap" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Application Name</th>
            <th>Permission Type</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ApplicationPermissionTypeID</td>
                <td>@item.ApplicationName</td>
                <td>@item.PermissionType</td>
                <td>
                    @if (item.PermissionType == "Company" || item.PermissionType == "Group" || item.PermissionType == "User")
                    {
                        <a href="@(Url.Action("Index", "ApplicationPermissionTypeDetail", new {applicationPermissionTypeID = item.ApplicationPermissionTypeID}))"
                            class="btn btn-primary btn-sm" title="View List Of @(item.PermissionType)">View List Of @(item.PermissionType)</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<script type="text/javascript">
    $(document).ready(function () {
        var table = $('#example').DataTable({
            responsive: true
        });
    });
</script>
